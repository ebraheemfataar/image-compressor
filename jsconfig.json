{
    "compilerOptions": {
      "target": "ES6",
      "module": "commonjs",
      "checkJs": true,
      "jsx": "react",
      "baseUrl": ".",
      "paths": {
        "@components/*": ["src/components/*"],
        "@utils/*": ["src/utils/*"]
      }
    },
    "include": [
      "src/**/*"
    ],
    "exclude": [
      "node_modules",
      "**/node_modules/*"
    ]
  }
  